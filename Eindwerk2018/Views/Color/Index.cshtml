@model IEnumerable<Eindwerk2018.Models.Color>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Eindwerk2018.Resources.Resource.ColorTitle</h2>

@*<p>
    @Html.ActionLink(Eindwerk2018.Resources.Resource.LinkCreate, "Create")
</p>*@
<table id="kleurTable" class="table table-bordered table-hover">
    <thead>
    <tr>
        <th>@Html.DisplayNameFor(model => model.NameEn)</th>
        <th>@Html.DisplayNameFor(model => model.NameNl)</th>
        <th>@Html.DisplayNameFor(model => model.NameFr)</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.NameEn)</td>
            <td>@Html.DisplayFor(modelItem => item.NameNl)</td>
            <td>@Html.DisplayFor(modelItem => item.NameFr)</td>

            <td>
                @Html.ActionLink(Eindwerk2018.Resources.Resource.LinkEdit, "Edit", new { id = item.Id }) |
                @Html.ActionLink(Eindwerk2018.Resources.Resource.LinkDetails, "Details", new { id = item.Id }) |
                @Html.ActionLink(Eindwerk2018.Resources.Resource.LinkDelete, "Delete", new { id = item.Id })
            </td>
        </tr>
    }
    </tbody>
</table>
<input type="button" class="btn btn-primary" value=@Eindwerk2018.Resources.Resource.LinkCreate2 onclick="location.href='@Url.Action("Create", "Color")'" />
@section scripts
{
    <script>
        $(document).ready(function () {
            $("#kleurTable").DataTable();
        });
    
  
    </script>
}