@model Eindwerk2018.Models.Color

@{
    ViewBag.Title = Eindwerk2018.Resources.Resource.LinkDelete;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Eindwerk2018.Resources.Resource.LinkDelete</h2>

<h3>@Eindwerk2018.Resources.Resource.DeleteQuestion</h3>
<div>
    <h4>@Eindwerk2018.Resources.Resource.ColorTitle</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(model => model.NameEn)</dt>
        <dd>@Html.DisplayFor(model => model.NameEn)</dd>

        <dt>@Html.DisplayNameFor(model => model.NameNl)</dt>
        <dd>@Html.DisplayFor(model => model.NameNl)</dd>

        <dt>@Html.DisplayNameFor(model => model.NameFr)</dt>
        <dd>@Html.DisplayFor(model => model.NameFr)</dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="@Eindwerk2018.Resources.Resource.LinkDelete" class="btn btn-default" /> |
            @Html.ActionLink(Eindwerk2018.Resources.Resource.LinkBackList, "Index")
        </div>
    }
</div>
