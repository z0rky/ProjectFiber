            @Html.ValidationMessageFor(model => model.Foid.Name, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Foid.Status, htmlAttributes: new { @class = "control-label col-md-2" })
