            @Html.DropDownListFor(model => model.Foid.Status, new SelectList(Model.Statuses, "Id", "NameEn"), "", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Foid.Status, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.OldStatus)
