@model Eindwerk2018.ViewModels.FoidFormViewModel


@{
    ViewBag.Title = "Foid";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Nieuwe FOID</h2>

@using (Html.BeginForm("Save", "Foid"))
{

    <div class="form-group">

        @Html.LabelFor(m => m.Foid.Name)
        @Html.TextBoxFor(m => m.Foid.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Foid.Name)

    </div>

   
    <div class="form-group">
        
        @Html.CheckBoxFor(m=>m.Foid.Status, new { @checked = "checked", id = "StatusId" })
        @Html.LabelFor(m => m.Foid.Status)
       

    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <input type="button" class="btn btn-primary" value="Back" 
           onclick="location.href='@Url.Action("Index", "Foid")'" />



    // date_creation = datetime now in controller
    // requestor xtra table?? dropbox?? of bepaald via security

}

