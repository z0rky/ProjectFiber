                    <br />
            }
            @Html.EditorFor(m => item.Fibers); //nope not working wel
                    *@
                    @for (int i = 0; i < item.Fibers.Count; i++)
                    {
                        @Html.DropDownListFor(modelItem => item.Fibers[i].FiberNr, new SelectList(item.ListFreeFibers, "FiberNr", "FiberNr"), new { @class = "form-control" })
                        <br />
                    }
                </td>
            </tr>
            }
        </table>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="button" class="btn btn-primary" value="Overzicht" onclick="history.go(-1);" />
            <button type="submit" class="btn btn-primary">@Eindwerk2018.Resources.Resource.LinkSave</button>
        </div>
    </div>
}
