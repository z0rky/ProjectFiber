@model Eindwerk2018.Models.Odf

@{
    ViewBag.Title = Eindwerk2018.Resources.Resource.LinkDetails;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Eindwerk2018.Resources.Resource.LinkDetails</h2>

<div>
    <h4>@Eindwerk2018.Resources.Resource.OdfTitle</h4>
    @*<hr />*@
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(model => model.Location)</dt>
        <dd>@Html.DisplayFor(model => model.Location.LocatieNaam)</dd>

        <dt>@Html.DisplayNameFor(model => model.OdfType)</dt>
        <dd>@Html.DisplayFor(model => model.OdfType.Name)</dd>

        <dt>@Html.DisplayNameFor(model => model.Name)</dt>
        <dd>@Html.DisplayFor(model => model.Name)</dd>

    </dl>
</div>
<p>
    <input type="button" class="btn btn-primary" value=@Eindwerk2018.Resources.Resource.LinkBack onclick="history.go(-1);" />
    <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Edit","Odf", new {id = Model.Id })'">@Eindwerk2018.Resources.Resource.LinkEdit</button>
</p>
