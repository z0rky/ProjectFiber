@model Eindwerk2018.ViewModels.KabelFormViewModel

@{
    ViewBag.Title = "Kabel";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Nieuwe Kabel</h2>

@using (Html.BeginForm("Save", "Kabel"))
{

    <div class="form-group">

        @Html.LabelFor(m => m.Kabel.Naam)
        @Html.TextBoxFor(m => m.Kabel.Naam, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Kabel.Naam)

    </div>

    <div class="form-group">

        @Html.LabelFor(m => m.Kabel.Reference)
        @Html.TextBoxFor(m => m.Kabel.Reference, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Kabel.Reference)

    </div>



    <button type="submit" class="btn btn-primary">Save</button>
    <input type="button" class="btn btn-primary" value="Back" 
           onclick="location.href='@Url.Action("Index", "Kabel")'" />


    // date_creation = datetime now in controller
    // requestor xtra table?? dropbox?? of bepaald via security

}
