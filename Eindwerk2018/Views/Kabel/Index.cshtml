@using Eindwerk2018.Models
@model IEnumerable<Eindwerk2018.Models.Kabel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(model => model.Naam)</th>
        <th>@Html.DisplayNameFor(model => model.Reference)</th>
        <th>@Html.DisplayNameFor(model => model.CreatieDatum)</th>
        <th></th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>@Html.DisplayFor(modelItem => item.Naam)</td>
        <td>@Html.DisplayFor(modelItem => item.Reference)</td>
        <td>@Html.DisplayFor(modelItem => item.CreatieDatum)</td>

        <td>@Html.ActionLink("Sections", "Index", "Sectie", new { kabelId = item.Id },null)</td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </td>
    </tr>
    }
</table>