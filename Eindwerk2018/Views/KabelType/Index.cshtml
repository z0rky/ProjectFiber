@model IEnumerable<Eindwerk2018.Models.KabelType>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Eindwerk2018.Resources.Resource.KabelTypeTitle</h2>

 
<table id="kabelType" class="table table-bordered table-hover">
   <thead>
    <tr>
        <th>@Html.DisplayNameFor(model => model.NameNL)</th>
        <th>@Html.DisplayNameFor(model => model.NameFR)</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.NameNL)</td>
            <td>@Html.DisplayFor(modelItem => item.NameFR)</td>

            <td>
                @Html.ActionLink(Eindwerk2018.Resources.Resource.LinkEdit, "Edit", new { id = item.Id }) |
                @Html.ActionLink(Eindwerk2018.Resources.Resource.LinkDetails, "Details", new { id = item.Id }) |
                @Html.ActionLink(Eindwerk2018.Resources.Resource.LinkDelete, "Delete", new { id = item.Id })
            </td>
        </tr>
    }
        </tbody>
</table>

<input type="button" class="btn btn-primary" value=@Eindwerk2018.Resources.Resource.LinkCreate onclick="location.href='@Url.Action("Create", "KabelType")'" />

@section scripts
{
    <script>
        $(document).ready(function() {
            $("#kabelType").DataTable({ searching: false, bInfo: false });
        });
    </script>
}