@model Eindwerk2018.ViewModels.SearchKabelViewModel

@{
    ViewBag.Title = Eindwerk2018.Resources.Resource.LinkSearch;
    Layout = "~/Views/Shared/_Layout.cshtml";
    <link href="~/content/simple-sidebar.css" rel="stylesheet">
}

<div id="wrapper">

    <div id="sidebar-wrapper">
        <ul class="sidebar-nav">

            <li>@Html.ActionLink("Reference", "SearchReference", "SearchKabel")</li>
            

        </ul>
    </div>

    <div id="page-content-wrapper">
        <div class="container-fluid">
            <h2>Kabel</h2>

            @using (Html.BeginForm("SearchKabel", "SearchKabel"))
            {

                <div class="form-group">
                    @Html.LabelFor(m => m.Kabel.Naam)
                    @Html.TextBoxFor(l => l.Kabel.Naam, new { @class = "form-control", id = "KabelNaamId" })
                </div>

                <button type="submit" class="btn btn-primary">@Eindwerk2018.Resources.Resource.LinkSearch</button>
                <button href="#menu-toggle" class="btn btn-primary" id="menu-toggle">Search Options</button>
            }

        </div>
    </div>

</div>

<script src="~/Scripts/jquerySideBar/jquery.min.js"></script>
<script src="~/Scripts/bootstrap_SideBar/js/bootstrap.bundle.min.js"></script>

<script>
    $("#menu-toggle").click(function (e) {
        e.preventDefault();
        $("#wrapper").toggleClass("toggled");
    });
</script>
