@model Eindwerk2018.ViewModels.NieuweLocatieViewModel
    
<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>


@{
    ViewBag.Title = "Locatie";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Nieuwe Locatie</h2>


@using (Html.BeginForm("Create", "Locatie"))
{

    <div class="form-group">

        @Html.LabelFor(m => m.Locatie.LocatieNaam)
        @Html.TextBoxFor(m => m.Locatie.LocatieNaam, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Locatie.LocatieNaam)

    </div>

    <div class="form-group">

        @Html.LabelFor(m => m.Locatie.GpsLong)
        @Html.TextBoxFor(m => m.Locatie.GpsLong, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Locatie.GpsLong)
    </div>

    <div class="form-group">

        @Html.LabelFor(m => m.Locatie.GpsLat)
        @Html.TextBoxFor(m => m.Locatie.GpsLat, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Locatie.GpsLat)
    </div>

  

    <div class="form-group">

        @Html.LabelFor(m => m.Locatie.locatieType)
        @Html.DropDownListFor(m => m.Locatie.locatieType, new SelectList(Model.LocatieTypes, "Id", "naamNL"), "selecteer type", new { @class = "form-control" })

    </div>

    <div class="form-group">
        
    @Html.CheckBoxFor(m=>m.Locatie.LocatieInfrabel, new { @checked = "checked", id = "InfrabelId" })
    @Html.LabelFor(m => m.Locatie.LocatieInfrabel)
     <br>
    @Html.TextBoxFor(m => m.Locatie.LocatieBedrijf,  new{ @disabled = "disabled", @class = "form-control", id = "LocatieBedrijfId"})


    <script> 
        $('#InfrabelId').click(function() {
            var $this = $(this);

            if ($this.is(':checked')) {
                $('#LocatieBedrijfId').attr("disabled", "disabled") 
            } else {
                
                $('#LocatieBedrijfId').removeAttr("disabled"); 
            }
        });
    </script>

    </div>

    <button type="submit" class="btn btn primary">Save</button>



}